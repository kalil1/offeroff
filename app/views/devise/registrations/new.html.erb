<style media="screen">
  @import url('https://fonts.googleapis.com/css?family=Raleway:300,400,700');

  *{
    margin: 0;
    padding: 0;
    outline: none;
    box-sizing: border-box;
    font-family: 'Raleway', sans-serif;
  }

  body{ background: #00795F; }

  .cont{
    top: 10px;
    margin: auto;
    border-radius: 22px;
    position: relative;
    width: 25%;
    height: 700px;
    padding: 10px 25px;
    background: #fff;
  }

  .form{ width: 100%; height: 100%; }

  h1, h2, .user, .pass{
    text-align: center;
    display: block;
  }

  h1{
    color: #606060;
    font-weight: bold;
    font-size: 40px;
    margin: 20px auto;
  }

  .user, .pass, .login{
    width: 100%;
    height: 45px;
    border: none;
    border-radius: 5px;
    font-size: 20px;
    font-weight: lighter;
    margin-bottom: 30px;
  }

  .user, .pass{ background: #ecf0f1; }

  .login{
    color: #fff;
    cursor: pointer;
    margin-top: 60px;
    background: green;
    transition: background 0.4s ease;
    border-radius: 22px;
  }

  .login2 {
    background-color: Transparent;
    background-repeat:no-repeat;
    border: none;
    cursor:pointer;
    overflow: hidden;
    outline:none;
  }

@media only screen
    and (device-width : 375px)
    and (-webkit-device-pixel-ratio : 3) {
      .cont{
        width: 85%;
        height: 1450px;
       }
       .user, .pass, .login{
         width: 100%;
         height: auto;
         border: none;
         border-radius: 16px;
         margin-bottom: 50px;
       }
       body{
         font-weight: 30px;
       }

       input[type='checkbox'] {
        width: 50px;
        height: 50px;
        }

        .loglogo {
          height: 200px;
          width: 100%;
        }

        .lab {
          margin-bottom: 160px
        }

       html * {
      font-size: 66px !important;
      font-weight: bold !important;
      overflow: hidden;
   }
     }
</style>


<div class="loglogo">
<h1>OfferOff</h1>
</div>

<div class="cont">

  <div class="form">
      <h1 class="lab" >Sign up</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, class: "user", autocomplete: "email", placeholder: "Email"  %>
      <%= f.text_field :username, class: "user", autocomplete: "username", placeholder: "Username"  %>
      <%= f.text_field :firstname, class: "user", placeholder: "First Name"  %>
      <%= f.text_field :lastname, class: "user", placeholder: "Last Name"  %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />

      <%= f.password_field :password, autocomplete: "new-password", class: "pass", placeholder: "New-Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pass", placeholder: "Confirm-Password" %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>  
      <button class="login" >
        <%= f.submit "Sign up ||",  class: "login2" %>
        <small>
          <%= link_to "Login", new_user_session_path, style: "font-weight:bold;color:lime;" %>
        </small>
      </button>
      <% end %>
  </div>


</div>
