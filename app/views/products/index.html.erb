<% if params[:category].blank? %>
<h2 >Products</h2>
<% else %>
<h2>
<%= params[:category] %>
</h2>
<% end %>
<div class="card">
  <h5 class="card-header">
    <% Category.all.each do |category| %>
      <span id="catbtn" class="<%= 'active' if params[:category] == category.name %>">
        <%= link_to category.name, products_path(category: category.name), class: 'link' %>
      </span>
    <% end %>
  </h5>

  </div>
<br>
<div class="container">




<% if @products.empty? %>
<h1>Blah</h1>
<% else %>
<ul class="product-list">


<% @products.each do |product| %>
<div class="card" style="width: 18rem;">
<%= image_tag product.product_img.url(:product_show), class: 'card-img-top' %>
<div class="card-body">
  <h5 class="card-title"><%= product.name %></h5>
  <h5 class="card-title"><%= number_to_currency(product.price) %></h5>
  <%= link_to "Details", product_path(product), class: "btn btn-primary" %>
</div>
</div>
<% end %>

<% end %>
</div>
<br>
