<style media="screen">
  #kali {
    background-color: #026d6d;
    margin: 0;
    padding: 0;
    border-color: #026d6d;
  }

  .navbar-brand{
    font-weight: bolder;
    font-size: 35px;
    color: white;
  }

  #f {
    left: 0%;
  }
  #active {
    background-color: black;
    border-radius: 12px;
    font-weight: bolder;
    font-size: 15px;
    color: black;
  }
</style>

    <nav id="kali" class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'OfferOff', root_path, {:style => 'color: white', :class => 'navbar-brand'} %>
        </div>
        <form id="f" class="navbar-form navbar-left" action="/action_page.php">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
            <input type="text" class="form-control" placeholder="Search">
          </div>
